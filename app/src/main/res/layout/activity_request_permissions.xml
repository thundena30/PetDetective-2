<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="2"
    android:background="@drawable/back_image"
    tools:context=".Activites.RequestPermissionsActivity">


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:weightSum="10">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="2"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:weightSum="5">
                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="3"
                        android:src="@drawable/icon_pet_detective"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="8"
                    android:orientation="vertical"
                    android:weightSum="5"
                    android:gravity="center">
                    <ImageView
                        android:layout_width="220dp"
                        android:layout_height="220dp"
                        android:src="@drawable/icon_marker"/>

                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:weightSum="10">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="2.5"
                    android:orientation="vertical"
                    android:weightSum="5"
                    android:gravity="center">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:textSize="20sp"
                        android:textColor="#000"
                        android:gravity="center"
                        android:text="Enable location"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:textColor="@color/color_hint"
                        android:gravity="center"
                        android:paddingRight="30dp"
                        android:paddingLeft="30dp"
                        android:layout_marginTop="5dp"
                        android:text="Turn on Location Access to allow &quot;PetDetective&quot; to show missing and found pets near you"  />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="7.5"
                    android:orientation="vertical"
                    android:weightSum="5"
                    android:gravity="center">
                    <TextView
                        android:id="@+id/btnEnable"
                        android:layout_width="160dp"
                        android:layout_height="50dp"
                        android:text="Enable"
                        android:gravity="center"
                        android:textSize="15sp"
                        android:textColor="#fff"
                        android:textStyle="bold"
                        android:background="@drawable/btn_enable_back"/>
                    <TextView
                        android:id="@+id/btn_showAll"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Show All"
                        android:gravity="center"
                        android:textSize="15sp"
                        android:textColor="@color/colorPrimary"
                        android:textStyle="bold"
                        android:layout_marginTop="10dp"/>
                </LinearLayout>
            </LinearLayout>
    </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="bottom"
            android:background="@color/colorPrimary"></LinearLayout>
    </FrameLayout>

</LinearLayout>