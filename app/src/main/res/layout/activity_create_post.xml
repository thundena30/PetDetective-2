<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#fff"
    tools:context=".Activites.CreatePostActivity">
    <ProgressBar
        android:id="@+id/progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:weightSum="10"
        android:background="@drawable/edit_back">

        <TextView
            android:id="@+id/txtPostType"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="10"
            android:text="Lost"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/textColor"
            android:gravity="center"/>

    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="10dp">
        <EditText
            android:id="@+id/editTitle"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/edit_back"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_marginTop="10dp"
            android:text=""
            android:textColor="@color/textColor"
            android:hint="Title"
            android:textColorHint="@color/color_hint"/>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:background="@drawable/edit_back"
            >
            <Spinner
                android:id="@+id/spinPetSelection"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:popupBackground="#fff"

                />
            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:weightSum="10"
                android:gravity="right">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:src="@drawable/icon_dropdown"/>
            </LinearLayout>
        </FrameLayout>
        <EditText
            android:id="@+id/editBreed"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/edit_back"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_marginTop="10dp"
            android:text=""
            android:textColor="@color/textColor"
            android:hint="Breed"
            android:textColorHint="@color/color_hint"/>
        <EditText
            android:id="@+id/editDesc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="100dp"
            android:inputType="textMultiLine"
            android:background="@drawable/edit_back"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_marginTop="10dp"
            android:text=""
            android:gravity="left|top"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:textColor="@color/textColor"
            android:hint="Description"
            android:textColorHint="@color/color_hint"/>
        <ImageView
            android:id="@+id/imagePet"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/image_dog_2"
            android:scaleType="fitXY"
            android:layout_marginTop="10dp"></ImageView>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:background="@drawable/edit_back"
            >
            <Spinner
                android:id="@+id/spinStatus"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:popupBackground="#fff"
                />
            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:weightSum="10">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="8"/>
                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:src="@drawable/icon_dropdown"/>
            </LinearLayout>
        </FrameLayout>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:background="@drawable/edit_back"
            >
            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:weightSum="10">
                <EditText
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="8"
                    android:hint="location"
                    android:background="@null"
                    android:paddingLeft="10dp"
                    android:textColor="@color/textColor"/>
                <ImageView
                    android:id="@+id/imagePickPlace"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:padding="10dp"
                    android:src="@drawable/icon_marker_black"/>
            </LinearLayout>
        </FrameLayout>

        <EditText
            android:id="@+id/editEmailPost"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/edit_back"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_marginTop="10dp"
            android:text=""
            android:textColor="@color/textColor"
            android:hint="Email"
            android:textColorHint="@color/color_hint"/>
        <EditText
            android:id="@+id/editContactPost"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/edit_back"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_marginTop="10dp"
            android:text=""
            android:textColor="@color/textColor"
            android:hint="Contact"
            android:textColorHint="@color/color_hint"/>
        <EditText
            android:id="@+id/editZip"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/edit_back"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_marginTop="10dp"
            android:text=""
            android:textColor="@color/textColor"
            android:hint="Zip Code"
            android:textColorHint="@color/color_hint"/>
        <Button
            android:id="@+id/btnSubmitPost"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:layout_gravity="center"
            android:text="Submit"
            android:textAllCaps="false"
            />

    </LinearLayout>
    </ScrollView>
    </LinearLayout>

</FrameLayout>